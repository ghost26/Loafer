<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rec"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onClick"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/recycler_item_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:src="@color/wallet_holo_blue_light"/>
    <TextView
        android:id="@+id/recycler_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/recycler_item_image"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/recycler_item_image"
        android:gravity="top"
        android:text="Name"
        android:textSize="23dp" />
    <TextView
        android:id="@+id/recycler_item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/recycler_item_image"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/recycler_item_image"
        android:gravity="bottom"
        android:text="Address"
        android:textSize="15dp" />

</RelativeLayout>