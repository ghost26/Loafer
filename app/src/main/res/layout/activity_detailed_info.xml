<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingRight="15dp"
    android:paddingLeft="15dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="#FFFFFF"
                android:id="@+id/image"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:id="@+id/name_rl">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Название:"
                    android:textColor="#000000"
                    android:id="@+id/name_title"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/name"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_rl"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:id="@+id/description_rl">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Название:"
                    android:textColor="#000000"
                    android:id="@+id/description_title"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/description"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description_rl"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:id="@+id/address_rl">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Описание:"
                    android:textColor="#000000"
                    android:id="@+id/address_title"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/address"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/address_rl"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:id="@+id/starts_at_rl">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Начало:"
                    android:textColor="#000000"
                    android:id="@+id/starts_at_title"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/starts_at"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/starts_at_rl"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:id="@+id/ends_at_rl">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Конец:"
                    android:textColor="#000000"
                    android:id="@+id/ends_at_title"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/ends_at"/>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="SEE MORE"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:onClick="onClick"
        android:id="@+id/seeMore" />

</RelativeLayout>